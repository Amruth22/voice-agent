# Required for voice agent functionality
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Calendar settings
USE_MOCK_CALENDAR=true  # Set to false to use real Google Calendar
USE_ENV_CREDENTIALS=false  # Set to true to use environment variables for Google credentials

# Optional: Google Calendar credentials as JSON (if USE_ENV_CREDENTIALS=true)
# GOOGLE_CREDENTIALS={"token": "...", "refresh_token": "...", "token_uri": "https://oauth2.googleapis.com/token", "client_id": "...", "client_secret": "...", "scopes": ["https://www.googleapis.com/auth/calendar"]}

# Optional: Customer information defaults
CUSTOMER_NAME=John Doe
CUSTOMER_EMAIL=john.doe@example.com

# Flask secret key (will be auto-generated if not provided)
# SECRET_KEY=your_secret_key_here

# Port (Heroku will set this automatically)
# PORT=5000